@model IEnumerable<BookMan.Models.Book>

@{
    ViewData["Title"] = $"Book list ({Model.Count()} items)";
}

<h1>Index</h1>

<div class="mb-3">
    <a asp-action="Create" class="btn btn-outline-primary">Create New</a>
    <form asp-action="Search" method="get" class="input-group w-50 float-right">
        <input type="text" class="form-control" placeholder="search for" name="search" style="margin:0 10px"/>
        <div class="input-group-append">
            <button class="btn btn-outline-secondary" type="submit">Search</button>
        </div>
    </form>
</div>
<table class="table table-hover table-sm">
    <thead>
        <tr>

            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Authors)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Publisher)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Year)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                  <a asp-route-id="@item.Id" asp-action="Details">@item.Name</a>
                </td>
                <td>
                   @item.Authors
                </td>
                <td>
                   @item.Publisher
                </td>
                <td>
                   @item.Year
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info">Delete</a>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-warning">Edit</a>
                    <a asp-action="Read" asp-route-id="@item.Id" class="btn btn-sm btn-outline-dark">Read</a>
                </td>
            </tr>
        }
    <tr>
        <td colspan="5">
            <strong>Sum: @Model.Count()</strong>
        </td>
    </tr>
    </tbody>
</table>
