                        c.AddFor(m => m.HR_NHANVIEN.SoTaiKhoanNH).Caption("Số Tài Khoản NH").AllowEditing(false);
                    });
                }).SearchPanel(searchPanel => searchPanel.Visible(true)).WordWrapEnabled(true).OnSaving("SaveLuong")
                .Summary(s => s.TotalItems(items =>
