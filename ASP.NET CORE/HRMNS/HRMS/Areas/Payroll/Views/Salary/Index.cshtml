                {
                    editing.Mode(GridEditMode.Popup);
                    editing.AllowUpdating(true);
                    editing.AllowDeleting(true);
                    //editing.AllowAdding(true);
                })
                .Columns(columns =>
                {
                    columns.AddFor(m => m.Id).Visible(false).AllowEditing(false).Fixed(true).FixedPosition(HorizontalEdge.Left);
                    columns.AddFor(m => m.MaNV).Caption("Mã Nhân Viên").AllowEditing(false).Fixed(true).FixedPosition(HorizontalEdge.Left);
                    columns.AddFor(m => m.HR_NHANVIEN.TenNV).Caption("Tên Nhân Viên").AllowEditing(false).Fixed(true).FixedPosition(HorizontalEdge.Left);
                    columns.AddFor(m => m.HR_NHANVIEN.HR_BO_PHAN_DETAIL.MaBoPhan_TOP1).Caption("Bộ Phận").AllowEditing(false).Fixed(true).FixedPosition(HorizontalEdge.Left);
                    columns.AddFor(m => m.HR_NHANVIEN.HR_BO_PHAN_DETAIL.MaBoPhan_TOP2).Caption("Phòng Ban").AllowEditing(false).Fixed(true).FixedPosition(HorizontalEdge.Left);
                    columns.AddFor(m => m.HR_NHANVIEN.HR_CHUCDANH.TenChucDanh).Caption("Chức Vụ").AllowEditing(false).Fixed(true).FixedPosition(HorizontalEdge.Left);
                    columns.AddFor(m => m.HR_NHANVIEN.NgayVao).Caption("Ngày Vào").AllowEditing(false);
                    columns.AddFor(m => m.Grade).Caption("Grade").AllowEditing(false);
                    columns.AddFor(m => m.MaBoPhanEx).Caption("Mã Bộ Phận").AllowEditing(false);
                    columns.AddFor(m => m.GradeYear).Caption("Grade Of Year").AllowEditing(false);

                    columns.Add().Caption("Thông Tin Lương").Columns(c =>
                    {
                        c.AddFor(m => m.BasicSalary).Caption(" Basic Salary").Format(Format.FixedPoint).AllowEditing(true).Fixed(true).FixedPosition(HorizontalEdge.Left);
                        c.AddFor(m => m.LivingAllowance).Caption("Living Allowance").Format(Format.FixedPoint).AllowEditing(true);
                        //c.AddFor(m => m.PositionAllowance).Caption("Position Allowance").Format(Format.FixedPoint).AllowEditing(true);
                        c.AddFor(m => m.AbilityAllowance).Caption("Ability Allowance").Format(Format.FixedPoint).AllowEditing(true);
                        c.AddFor(m => m.HarmfulAllowance).Caption("Harmful Allowance").Format(Format.FixedPoint).AllowEditing(true);
                        c.AddFor(m => m.HR_NHANVIEN.HR_CHUCDANH.PhuCap).Caption("Phụ Cấp Chức Vụ").Format(Format.FixedPoint).AllowEditing(false);
                    });

                    columns.Add().Caption("Incentive").Columns(c =>
                    {
                        c.AddFor(m => m.IncentiveStandard).Caption("Cơ bản").Format(Format.FixedPoint).AllowEditing(true);
                        c.AddFor(m => m.IncentiveLanguage).Caption("PC ngoại ngữ").Format(Format.FixedPoint).AllowEditing(true);
                        c.AddFor(m => m.IncentiveTechnical).Caption("PC kỹ thuật").Format(Format.FixedPoint).AllowEditing(true);
                        c.AddFor(m => m.IncentiveOther).Caption("PC Khác").Format(Format.FixedPoint).AllowEditing(true);
                    });

                    columns.Add().Caption("Đánh giá").Columns(c =>
                    {
                        c.AddFor(m => m.IncentiveSixMonth1).Caption("Incentive 6 tháng đầu năm").AllowEditing(true);
                        c.AddFor(m => m.IncentiveSixMonth2).Caption("Incentive 6 tháng cuối năm").AllowEditing(true);
                    });

                    columns.Add().Caption("Hạng Mục Khác").Columns(c =>
                    {
                        c.AddFor(m => m.DoiTuongPhuCapDocHai).Caption("Đối tượng phụ cấp độc hại(x)").AllowEditing(true);
                        c.AddFor(m => m.HoTroCongDoan).Caption("Hỗ trợ công đoạn").Format(Format.FixedPoint).AllowEditing(true);
                        c.AddFor(m => m.PCCC_CoSo).Caption("Hỗ trợ đội PCCC cơ sở").Format(Format.FixedPoint).AllowEditing(true);
                        c.AddFor(m => m.HoTroATVS_SinhVien).Caption("Hỗ trợ đội an toàn vệ sinh viên").Format(Format.FixedPoint).AllowEditing(true);
                        c.AddFor(m => m.ThuocDoiTuongBaoHiemXH).Caption("Thuộc đối tượng tham gia BHXH (x)").AllowEditing(false);
                        c.AddFor(m => m.DoiTuongTruyThuBHYT).Caption("Đối tượng truy thu BHYT").AllowEditing(true);
                        c.AddFor(m => m.SoNguoiPhuThuoc).Caption("Số người phụ thuộc").Format(Format.FixedPoint).AllowEditing(true);
                        c.AddFor(m => m.SoConNho).Caption("Số Con nhỏ").AllowEditing(true);
