@{
    ViewData["Title"] = "Con nhỏ";
    Layout = "~/Areas/Payroll/Views/Shared/_Layout.cshtml";
}

<script src="~/js/exportFile_devextreme/polyfill.min.js"></script>
<script src="~/js/exportFile_devextreme/exceljs.min.js"></script>
<script src="~/js/exportFile_devextreme/FileSaver.min.js"></script>

<script>

    $(function () {
        $('#btn-import-connho').on('click', function () {
            console.log('click');
            $("#fileInputExcel").val(null);
            $('#hd-ImportUrl').val('/Payroll/ConNhoMns/ImportConNho?param=');
            $('#import_connho').modal('show');
        });

        $('#btnCloseImportExcel').on('click', function () {
            var fileUpload = $("#fileInputExcel").get(0);
            var files = fileUpload.files;
            if (files.length > 0) {
                $("#fileInputExcel").val(null);
                $('#import_connho').modal('hide');
                location.reload();
            }
        });

        $('#btnImportExcel').on('click', function () {
            var fileUpload = $("#fileInputExcel").get(0);
            var files = fileUpload.files;

            // Create FormData object
            var fileData = new FormData();
            // Looping over all files and add it to FormData object
            for (var i = 0; i < files.length; i++) {
                fileData.append("files", files[i]);
            }
            // Adding one more key to FormData object
            // fileData.append('categoryId', $('#ddlCategoryIdImportExcel').combotree('getValue'));
            var url = $('#hd-ImportUrl').val();

            $.ajax({
                url: url,//'/OpeationMns/GOCModule/ImportExcel?param=' + type,
                type: 'POST',
                data: fileData,
                processData: false,  // tell jQuery not to process the data
                contentType: false,  // tell jQuery not to set contentType
                beforeSend: function () {
                    hrms.run_waitMe($('#import_connho'));
                },
                success: function (data) {

                    $("#fileInputExcel").val(null);
                    $('#import_connho').modal('hide');

                    hrms.hide_waitMe($('#import_connho'));
                    hrms.notify("Import success!", 'Success', 'alert', function () {

                        location.reload();
                    });
                },
                error: function (status) {
                    hrms.notify('error: Import error!' + status.responseText, 'error', 'alert', function () { });
                    hrms.hide_waitMe($('#import_connho'));
                }
            });
            return false;
        });
    });

    function refreshGrid() {
        $("#gridContainer").dxDataGrid("refresh");
    }

    function exporting(e) {
        var workbook = new ExcelJS.Workbook();
        var worksheet = workbook.addWorksheet('Con nhỏ');

        DevExpress.excelExporter.exportDataGrid({
            component: e.component,
            worksheet: worksheet,
            autoFilterEnabled: true
        }).then(function () {
            workbook.xlsx.writeBuffer().then(function (buffer) {
                saveAs(new Blob([buffer], { type: 'application/octet-stream' }), 'Con_Nho.xlsx');
            });
        });
    }
</script>

<div class="content container-fluid" id="prdSmtMondayContent">
    <!-- Page Header -->
    <div class="page-header">
        <div class="row align-items-center">
            <div class="col">
                <h3 class="page-title">@ViewData["Title"]</h3>
                <ul class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/OpeationMns/Home/Index">Home</a></li>
                    <li class="breadcrumb-item active">Con Nhỏ</li>
                </ul>
            </div>

            <div class="col-auto float-right ml-auto">
                <div class="btn-group">
                    <button type="button" class="btn btn-info dropdown-toggle" id="btnImport" style="margin-right:100px;width:100px" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Excel</button>
                    <div class="dropdown-menu" style="">
                        <a class="dropdown-item" href="~/templates/ConNhoTemplate.xlsx">File import con nhỏ</a>
                        <a class="dropdown-item" href="#" id="btn-import-connho">Import con nhỏ</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- /Page Header -->

    <div class="row">
        <div class="col-md-12">
            @(
                Html.DevExtreme().DataGrid<HR_CON_NHO>
                ()
                .ID("gridContainer")
                .ShowBorders(true)
                .ShowColumnLines(true)
                .Height(700)
                .ShowRowLines(true)
                .Paging(paging => paging.Enabled(false))
                .FilterRow(filterRow => filterRow
                .Visible(true)
                .ApplyFilter(GridApplyFilterMode.Auto)
                )
                .HeaderFilter(headerFilter => headerFilter.Visible(true))
                .HoverStateEnabled(true)
                .Paging(paging => paging.Enabled(false))
                .SearchPanel(searchPanel => searchPanel
                .Visible(true)
                .Width(240)
                .Placeholder("Search..."))
                .Export(e => e.Enabled(true).AllowExportSelectedData(true))
                .OnExporting("exporting")
                .Editing(editing =>
                {
                    editing.Mode(GridEditMode.Row);
                    editing.AllowAdding(true);
                    editing.AllowDeleting(true);
                    editing.AllowUpdating(true);
                })
                .Columns(columns =>
                {
                    columns.AddFor(m => m.MaNV).Caption("Mã Nhân Viên");
                    columns.AddFor(m => m.TenNV).Caption("Tên Nhân Viên");
                    columns.AddFor(m => m.NgaySinh).Caption("Ngày Sinh");
                    columns.AddFor(m => m.ThangTinhHuong).Caption("Tháng Tính Hưởng");
                })
                .DataSource(d => d.Mvc()
                .Controller("ConNhoMns")
                .LoadAction("GetConNho")
                .UpdateAction("PutConNho")
                .InsertAction("PostConNho")
                .DeleteAction("DeleteConNho")
                .Key("Id")).Summary(s => s.TotalItems(items =>
                {
                    items.AddFor(m => m.MaNV).SummaryType(SummaryType.Count).DisplayFormat("Count: {0}");
                })
                )
                )

        </div>
    </div>
</div>
