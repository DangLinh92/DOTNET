@model List<NhanVienThaiSanViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@section Scripts
{
    <script src="~/lib/jquery-ajax-unobtrusive/jquery.unobtrusive-ajax.min.js"></script>
    @*<script src="~/app/controllers/thaisan/thaisanMns.js"></script>*@
    <script>
        var thaisanController = new thaisanController();
        thaisanController.initialize();

        onSuccess = thaisanController.doAftersearch;

        $(document).ready(function () {
            $('#thaisanDataTable').DataTable({
                "order": [6, 'asc']
            });
            $('input[type=search]').addClass('floating').removeClass('form-control-sm').css('width', 300).attr('placeholder', 'Type to search.');
            $('select[name="thaisanDataTable_length"]').removeClass('form-control-sm');

            $(".nested").select2({
                tags: true
            });
        });
    </script>
}
<div class="content container-fluid">
    <div class="page-header">
        <div class="row align-items-center">
            <div class="col">
                <h3 class="page-title">Thai Sản Con Nhỏ</h3>
                <ul class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/Admin/Home/Index">Home</a></li>
                    <li class="breadcrumb-item active">Maternity</li>
                </ul>
            </div>
            <div class="col-auto float-right ml-auto">
                @if (User.FindFirst(x => x.Type == "Roles").Value.Split(';').Length > 0 && (User.FindFirst(x => x.Type == "Roles").Value.Split(';')[0] == "Admin" || User.FindFirst(x => x.Type == "Roles").Value.Split(';')[0] == "HR" || User.FindFirst(x => x.Type == "Roles").Value.Split(';')[0] == "HR_Payroll"))
                {
                    <a href="#" id="btnCreate" class="btn add-btn" data-toggle="modal" data-target="#add_thaisan"><i class="fa fa-plus"></i> Add</a>
                    <a href="#" id="btnExport" class="btn add-btn"><i class="fa fa-file"></i> Export</a>

                    <div class="btn-group">
                        <button type="button" class="btn btn-info dropdown-toggle" id="btnImport" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Excel</button>
                        <div class="dropdown-menu" style="">
                            <a class="dropdown-item" href="~/templates/ThaiSanConNhoTemplate.xlsx">File mẫu nhân viên Thai Sản</a>
                            <a class="dropdown-item" href="#" id="btn-import">Import Thai Sản</a>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- Search Filter -->
    <form id="frmSearch" method="post" data-ajax="true" data-ajax-url="/Admin/NhanVienThaiSan/Search" data-ajax-update="#gridThaisanIndex" data-ajax-mode='replace' data-ajax-success="onSuccess">
        <div class="row filter-row">

            <div class="col-sm-6 col-md-3 col-lg-3 col-xl-2 col-12"></div>
            <div class="col-sm-6 col-md-3 col-lg-3 col-xl-2 col-12">
                <div class="form-group form-focus select-focus">
                    <select id="cboCheDo" name="chedo" class="select floating">
                        <option value="" selected>--All--</option>
                        <option value="ThaiSan">Thai Sản</option>
                        <option value="MangBau">Mang Bầu</option>
                        <option value="ConNho">Con Nhỏ</option>
                    </select>
                    <label class="focus-label">Chêd Độ</label>
                </div>
            </div>

            <div class="col-sm-6 col-md-3 col-lg-3 col-xl-2 col-12">
                <div class="form-group form-focus select-focus">
                    <input id="txtMaNV" name="maNV" class="form-control floating" type="text" />
                    <label class="focus-label">User Id</label>
                </div>
            </div>
            <div class="col-sm-6 col-md-3 col-lg-3 col-xl-2 col-12">
                <div class="form-group form-focus">
                    <div class="cal-icon">
                        <input id="txtTimeFrom" name="fromTime" class="form-control floating datetimepicker" type="text">
                    </div>
                    <label class="focus-label">From</label>
                </div>
            </div>
            <div class="col-sm-6 col-md-3 col-lg-3 col-xl-2 col-12">
                <div class="form-group form-focus">
                    <div class="cal-icon">
                        <input id="txtTimeTo" name="toTime" class="form-control floating datetimepicker" type="text">
                    </div>
                    <label class="focus-label">To</label>
                </div>
            </div>
            <div class="col-sm-6 col-md-3 col-lg-3 col-xl-2 col-12">
                <button id="btnSearch" type="submit" class="btn btn-success btn-block"> Search </button>
            </div>
        </div>
    </form>
    <!-- /Search Filter -->

    <div class="row">
        <div class="col-md-12">
            <div class="table-responsive" id="gridThaisanIndex">
                @await Html.PartialAsync("_gridThaiSanPartialView", Model)
            </div>
        </div>
    </div>
</div>

<div class="modal custom-modal fade" id="delete_nhanVien_ts" role="dialog">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-body">
                <div class="form-header">
                    <input type="hidden" id="hdId_delete" />
                    <h3>Delete</h3>
                    <p>Are you sure want to delete?</p>
                </div>
                <div class="modal-btn delete-action">
                    <div class="row">
                        <div class="col-6">
                            <a href="javascript:void(0);" class="btn btn-primary continue-btn" id="btn-delete_nv_ts">Delete</a>
                        </div>
                        <div class="col-6">
                            <a href="javascript:void(0);" data-dismiss="modal" class="btn btn-primary cancel-btn">Cancel</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<partial name="_thaisanModelPartialView" />

<!-- import excel model -->
<partial name="_ImportExcelModel" />

