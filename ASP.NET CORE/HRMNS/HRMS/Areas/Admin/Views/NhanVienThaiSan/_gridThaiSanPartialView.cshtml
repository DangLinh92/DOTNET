@model List<NhanVienThaiSanViewModel>

<table class="table table-striped custom-table datatable" id="thaisanDataTable">
    <thead>
        <tr>
            <th>Mã Nhân Viên</th>
            <th>Tên Nhân Viên</th>
            <th>Bộ Phận</th>
            <th>Chế Độ</th>
            <th>Ngày Bắt Đầu</th>
            <th>Ngày Kết Thúc</th>
            <th class="text-right no-sort">Action</th>
        </tr>
    </thead>
    <tbody id="tbl-content">
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.MaNV</td>
                <td>@item.HR_NHANVIEN.TenNV</td>
                <td>@item.HR_NHANVIEN.MaBoPhan</td>

                @if (item.CheDoThaiSan == "ConNho1H")
                {
                    <td>Con nhỏ - Về sớm 1H(Không trừ về sớm,Tính OT)</td>
                }
                else if (item.CheDoThaiSan == "ConNho")
                {
                    <td>Con nhỏ - Về đúng giờ(Không tính OT)</td>
                }
                else
                {
                    <td>@item.CheDoThaiSan</td>
                }

                <td>@item.FromDate</td>
                <td>@item.ToDate</td>
                <td class="text-right">

                    @if (User.FindFirst(x => x.Type == "Roles").Value.Split(';').Length > 0 && (User.FindFirst(x => x.Type == "Roles").Value.Split(';')[0] == "Admin" || User.FindFirst(x => x.Type == "Roles").Value.Split(';')[0] == "HR"))
                    {
                        <div class="dropdown dropdown-action">
                            <a href="#" class="action-icon dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><i class="material-icons">more_vert</i></a>
                            <div class="dropdown-menu dropdown-menu-right">
                                <a class="dropdown-item edit-nv-thaisan" href="#" data-toggle="modal" data-target="#add_thaisanModel" data-id="@item.Id"><i class="fa fa-edit m-r-5"></i> Edit</a>
                                <a class="dropdown-item delete-nv-thaisan" href="#" data-toggle="modal" data-target="#delete_thaisan" data-id="@item.Id"><i class="fa fa-trash-o m-r-5"></i> Delete</a>
                            </div>
                        </div>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>