<!-- Add Nhan Vien Ca Lam Viec Modal -->
<div id="addEditOvertimeModel" class="modal custom-modal fade" role="dialog">
    <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Overtime</h5>
                <input type="hidden" id="hd_overtime" />
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="frmOvertimeAddEdit">
                    <div class="form-group">
                        <input type="hidden" id="_txtId" />
                        <label for="_txtMaNV">Mã Nhân Viên<span class="text-danger">*</span></label>
                        <select id="_txtMaNV" class="form-control nested" name="MaNV" required>
                            <option value="">Choose...</option>
                            <optgroup label="Group1">
                                <option selected="selected">orange</option>
                                <option>white</option>
                                <option>purple</option>
                            </optgroup>
                            <optgroup label="Group2">
                                <option>purple</option>
                                <option>orange</option>
                                <option>white</option>
                            </optgroup>
                            <optgroup label="Group3">
                                <option>white</option>
                                <option>purple</option>
                                <option>orange</option>
                            </optgroup>
                        </select>
                    </div>

                    <div class="form-group">
                        <label for="_txtOvertime">Ngày Đăng Ký OT<span class="text-danger">*</span></label>
                        <div class="cal-icon"><input id="_txtOvertime" class="form-control datetimepicker" name="NgayOT" type="text" required></div>
                    </div>
                    <div class="form-group">
                        <label for="_txtSoGioOT">Số giờ OT<span class="text-danger">*</span></label>
                        <input id="_txtSoGioOT" class="form-control" name="SoGioOT" type="number" required>
                    </div>
                    <div class="form-group">
                        <label for="_txtHeSoOT">Hệ Số OT<span class="text-danger">*</span></label>
                        <select id="_txtHeSoOT" class="select" name="HeSoOT" required>
                            <option value="150">150%</option>
                            <option value="200">200%</option>
                            <option value="210">210%</option>
                            <option value="270">270%</option>
                            <option value="300">300%</option>
                            <option value="390">390%</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label>Nội dung<span class="text-danger">*</span></label>
                        <textarea rows="4" class="form-control" id="_txtContent" name="NoiDung" required></textarea>
                    </div>
                    <div class="submit-section">
                        <button class="btn btn-primary submit-btn" id="btnSave_Overtime">Save</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
