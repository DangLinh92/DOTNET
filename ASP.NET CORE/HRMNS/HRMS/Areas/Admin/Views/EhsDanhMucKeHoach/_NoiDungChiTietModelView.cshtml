<!-- Add Nhan Vien Ca Lam Viec Modal -->
<div id="addEditNoiDungChiTietModel" class="modal custom-modal fade" role="dialog">
    <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Nội Dung Chi Tiết</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="frmNoiDungChiTietAddEdit">
                    <div class="form-group">
                        <input type="hidden" id="hd_IdNoiDungChiTiet" name="Id" />
                        <label for="_txtNoiDung">Nội Dung</label>
                        <input id="_txtNoiDung" class="form-control" name="NoiDung" type="text" readonly>
                    </div>
                    <div class="form-group">
                        <label for="_txtNhaThau">Nhà Thầu</label>
                        <input id="_txtNhaThau" class="form-control" name="NhaThau" type="text">
                    </div>
                    <div class="form-group">
                        <label for="_txtChuKy">Chu Kỳ</label>
                        <div class="row">
                            <div class="col-md-9"> <input id="_txtChuKy" class="form-control" name="ChuKy" type="number"></div>
                            <div class="col-md-3">
                                <select id="_txtDonViChuKy" class="select" name="DonViChuKy">
                                    <option value="Month">Month</option>
                                    <option value="Year">Year</option>
                                    <option value="Day">Day</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="_txtViTri">Vị Trí</label>
                        <input id="_txtViTri" class="form-control" name="ViTri" type="text" maxlength="500">
                    </div>
                    <div class="form-group">
                        <label for="_txtSoLuong">Số Lượng</label>
                        <input id="_txtSoLuong" class="form-control" name="SoLuong" type="number">
                    </div>
                    <div class="form-group">
                        <label for="_txtNgayThucHien">Ngày Kiểm Định</label>
                        <div class="cal-icon"><input id="_txtNgayThucHien" class="form-control datetimepicker" name="NgayThucHien" type="text"></div>
                    </div>
                    <div class="form-group">
                        <label for="_txtThoiGian_ThucHien">Thời Gian Huấn Luyện</label>
                        <input id="_txtThoiGian_ThucHien" class="form-control" name="ThoiGian_ThucHien" type="text">
                    </div>
                    <div class="form-group">
                        <label for="_txtYeuCau">Yêu Cầu</label>
                        <input id="_txtYeuCau" class="form-control" name="YeuCau" type="text" maxlength="500">
                    </div>
                    <div class="form-group">
                        <label for="_txtNgayKhaiBaoThietBi">Ngày Khai Báo Thiết Bị</label>
                        <div class="cal-icon"><input id="_txtNgayKhaiBaoThietBi" class="form-control datetimepicker" name="NgayKhaiBaoThietBi" type="text"></div>
                    </div>
                    <div class="form-group">
                        <label for="_txtThoiGianThongBao">Thông Báo Trước</label>
                        <div class="row">
                            <div class="col-md-9">
                                <input id="_txtThoiGianThongBao" class="form-control" name="ThoiGianThongBao" type="number">
                            </div>
                            <div class="col-md-3">
                                <select id="_txtDonViThoiGianThongBao" class="select" name="DonViThoiGianThongBao">
                                    <option value="Day">Day</option>
                                    <option value="Month">Month</option>
                                    <option value="Year">Year</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="submit-section">
                        <button class="btn btn-info submit-btn" id="btnSave_NoiDungChiTiet">Save</button>
                        <button class="btn btn-primary submit-btn" id="btnDelete_NoiDungChiTiet">Delete</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
