    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-body">
                <div class="form-header">
                    <h3>Xóa Kế Hoạch</h3>
                    <div class="form-group">
                        <input type="hidden" id="txtKeHoachId_Delete" />
