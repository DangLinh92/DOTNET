@model List<NhanVienViewModel>
<table class="table table-striped custom-table datatable" id="nhanVienDataTable">
    <thead>
        <tr>
            <th>Name</th>
            <th>Employee ID</th>
            <th>Team Position</th>
            <th>Department</th>
            <th>Email</th>
            <th>Mobile</th>
            <th class="text-nowrap">Starting Working</th>
            <th class="text-nowrap">Status</th>
            <th class="text-right no-sort">Action</th>
        </tr>
    </thead>
    <tbody id="tbl-content">
        @foreach (var nv in Model)
        {
            <tr>
                <td>
                    <h2 class="table-avatar">
                        <a href="/admin/nhanVien/profile?id=@nv.Id" class="avatar"><img alt="" src="@nv.Image"></a>
                        <a href="/admin/nhanVien/profile?id=@nv.Id">@nv.TenNV</a>
                    </h2>
                </td>
                <td>@nv.Id</td>
                <td>@nv.MaChucDanh</td>
                <td>@nv.MaBoPhan</td>
                <td>@nv.Email</td>
                <td>@nv.SoDienThoai</td>
                <td>@nv.NgayVao</td>
                <td>
                    @if (nv.Status == "Active")
                    {
                        <span class="badge bg-inverse-success">@nv.Status</span>
                    }
                    else
                    {
                        <span class="badge bg-inverse-dark">@nv.Status</span>
                    }
                </td>
                <td class="text-right">
                    <div class="dropdown dropdown-action">
                        <a href="#" class="action-icon dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><i class="material-icons">more_vert</i></a>
                        <div class="dropdown-menu dropdown-menu-right">
                            <a class="dropdown-item edit-employee" href="#" data-toggle="modal" data-target="#add_employee" data-id="@nv.Id"><i class="fa fa-edit m-r-5"></i> Edit</a>
                            <a class="dropdown-item updateCode_employee" href="#" data-toggle="modal" data-target="#updateCode_employee" data-id="@nv.Id"><i class="fa fa-edit m-r-5"></i> Edit Code</a>
                            <a class="dropdown-item delete-employee" href="#" data-toggle="modal" data-target="#delete_employee" data-id="@nv.Id"><i class="fa fa-trash-o m-r-5"></i> Delete</a>
                        </div>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>