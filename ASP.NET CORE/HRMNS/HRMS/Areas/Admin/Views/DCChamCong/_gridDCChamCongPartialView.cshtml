@model List<DCChamCongViewModel>
<table class="table table-striped custom-table datatable" id="dcChamCongDataTable">
    <thead>
        <tr>
            <th>User Id</th>
            <th>User Name</th>
            <th>Department</th>
            <th>Ngày Điều Chỉnh</th>
            <th>Value</th>
            <th class="text-nowrap">Content</th>
            <th>Tháng Lương Chi Trả</th>
            <th class="text-right no-sort">Action</th>
        </tr>
    </thead>
    <tbody id="tbl-content">
        @foreach (var item in Model)
        {
        <tr>
            <td>@item.MaNV</td>
            <td>@item.HR_NHANVIEN?.TenNV</td>
            <td>@item.HR_NHANVIEN?.MaBoPhan</td>
            <td>@item.NgayDieuChinh</td>
            <td>@item.TongSoTien</td>
            <td>@item.NoiDungDC</td>
            <td>@item.ChiTraVaoLuongThang</td>
            
            <td class="text-right">
                <div class="dropdown dropdown-action">
                    <a href="#" class="action-icon dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><i class="material-icons">more_vert</i></a>
                    <div class="dropdown-menu dropdown-menu-right">
                        <a class="dropdown-item edit-DCChamCong" href="#" data-toggle="modal" data-target="#addDieuChinhChamCongModel" data-id="@item.Id"><i class="fa fa-edit m-r-5"></i> Edit</a>
                        <a class="dropdown-item delete-DCChamCong" href="#" data-toggle="modal" data-target="#delete_dcChamcong" data-id="@item.Id"><i class="fa fa-trash-o m-r-5"></i> Delete</a>
                    </div>
                </div>
            </td>
        </tr>
        }
    </tbody>
</table>