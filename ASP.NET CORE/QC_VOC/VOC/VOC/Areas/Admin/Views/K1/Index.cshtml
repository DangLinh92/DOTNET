@model VocInfomationsModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@section Scripts
{
    <script src="https://cdn.datatables.net/select/1.3.4/js/dataTables.select.min.js"></script>
    <script src="https://cdn.datatables.net/fixedcolumns/4.0.2/js/dataTables.fixedColumns.min.js"></script>
    <script src="~/lib/jquery-ajax-unobtrusive/jquery.unobtrusive-ajax.min.js"></script>
    <script>

         var chardataPPM = JSON.parse('@Html.Raw(JsonSerializer.Serialize(Model.VocPPMView))');

        onSuccess = function () { };

        $('#txtYear').datetimepicker({
            format: 'YYYY',//YYYY-MM-DD,
            icons:
            {
                up: "fa fa-angle-up",
                down: "fa fa-angle-down",
                next: 'fa fa-angle-right',
                previous: 'fa fa-angle-left'
            }
        });

    </script>
    <script src="~/app/controllers/ppm/chartjs-ppm.js"></script>
    <script src="~/app/controllers/ppm/chartjsPPM_Mns.js"></script>
    <script>
        var site = $('#cboSite').val();
        var chartjsPPM = new chartjsPPM_Controller();
        chartjsPPM.DrawChart(site);

        var ppmMns = new chartPPMMnsController();
        ppmMns.initialize();

        if (site == 'ALL') {
            $('.area-all').css('display', true);
            $('.area-csp').css('display', 'none');
            $('.area-lfem').css('display', 'none');
        }
        else if (site == 'CSP') {
            $('.area-all').css('display', 'none');
            $('.area-csp').css('display', true);
            $('.area-lfem').css('display', 'none');
        }
        else {
            $('.area-all').css('display', 'none');
            $('.area-csp').css('display', 'none');
            $('.area-lfem').css('display', true);
        }
    </script>
}
<div class="content container-fluid">
    <div class="row">
        <div class="col-sm-12">
            <i class="fa fa-caret-right"></i> <strong>고객(사) GMES 불량율 Data Trend 관리</strong> <a href="#" style="float:right" id="btnExportData" class="btn"><i class="fa fa-file"></i> Export Excel</a><br />
            <i>※ Unit [PPM]</i>
        </div>
    </div>
    <form action="/admin/k1/Search" method="post">
        <div class="row filter-row">
            <div class="col-md-6 col-sm-6 col-lg-6 col-xl-2"></div>
            <div class="col-md-6 col-sm-6 col-lg-6 col-xl-2"></div>
            <div class="col-md-6 col-sm-6 col-lg-6 col-xl-2"></div>

            <div class="col-md-6 col-sm-6 col-lg-6 col-xl-2">
                <div class="form-group form-focus select-focus">
                    <div class="cal-icon"><input id="txtYear" name="year" value="@Model.VocPPMView.Year" class="form-control datetimepicker" type="text"></div>
                    <label class="focus-label">접수 년도/Năm</label>
                </div>
            </div>
            <div class="col-md-6 col-sm-6 col-lg-6 col-xl-2">
                <div class="form-group form-focus select-focus">
                    <select id="cboSite" class="select floating" name="site">
                        <!option value="ALL" @(Model.VocPPMView.Module == "ALL" ? "selected" : "")>ALL</!option>
                        <!option value="CSP" @(Model.VocPPMView.Module == "CSP" ? "selected" : "")>CSP</!option>
                        <!option value="LFEM" @(Model.VocPPMView.Module == "LFEM" ? "selected" : "")>LFEM</!option>
                    </select>
                    <label class="focus-label">CSP/LFEM</label>
                </div>
            </div>
            <div class="col-md-6 col-sm-6 col-lg-6 col-xl-2">
                <button id="btnSearch" type="submit" class="btn btn-success btn-block"> Search </button>
            </div>
        </div>
    </form>

    <div class="row area-all">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    <div>
                        <canvas id="chartLine_All" style="height:270px"></canvas>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row area-all">
        <div class="col-md-12 d-flex">
            <div class="card card-table flex-fill">
                <div class="card-header">
                    <h3 class="card-title mb-0">
                        K1 고객 불량 (월별 목표 대비 실적)
                    </h3>
                    <i>※ Unit [PPM]</i>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered table-hover mb-0 table-striped custom-table datatable" id="gmesPPMTable">
                            <thead>
                                <tr>
                                    <th rowspan="2" colspan="2">구 분</th>
                                    <th rowspan="2">@string.Format("{0}년", (Model.VocPPMView.Year - 3).ToString().Substring(2))</th>
                                    <th rowspan="2">@string.Format("{0}년", (Model.VocPPMView.Year - 2).ToString().Substring(2))</th>
                                    <th rowspan="2">@string.Format("{0}년", (Model.VocPPMView.Year - 1).ToString().Substring(2))</th>
                                    <th rowspan="2">@string.Format("{0}년", Model.VocPPMView.Year.ToString().Substring(2))</th>

                                    <th colspan="12" style="text-align:center">@string.Format("{0}년", Model.VocPPMView.Year.ToString().Substring(2))</th>
                                </tr>
                                <tr>
                                    @for (int i = 1; i <= 12; i++)
                                    {
                                        @if (DateTime.Now.Month == i)
                                        {
                                            <th style="background-color: #FCF3CF;color:red">@string.Format("{0}월", i)</th>
                                        }
                                        else
                                        {
                                            <th>@string.Format("{0}월", i)</th>
                                        }
                                    }
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.VocPPMView.dataChartsAll)
                                {
                                    <tr>
                                        <td rowspan="2">@item.Module</td>
                                        <td style="color: Highlight">목표(target)</td>
                                        @foreach (var target in item.dataTargetAll)
                                        {
                                            <td style="color: Highlight">@target</td>
                                        }
                                    </tr>
                                    <tr>
                                        <td style="color:red">실적</td>
                                        @foreach (var ppm in item.lstData)
                                        {
                                            <td style="color:red">@ppm</td>
                                        }
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row area-csp">
        @{
            int j = 0;
            @foreach (var item in Model.VocPPMView.dataChartsItem)
            {
                @foreach (var sub in item.Where(x => x.Module == "CSP"))
                {
                    j = j + 1;
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-body">
                                <div>
                                    <canvas id="@string.Format("chartLine_{0}",j)" style="height:270px"></canvas>
                                </div>
                            </div>
                        </div>

                        <div class="card card-table">
                            <div class="card-header">
                                <h3 class="card-title mb-0">
                                    @sub.Customer Customer GMES Data
                                </h3>
                            </div>
                            <div class="card-body">
                                <div class="table-responsive">
                                    <table class="table table-bordered table-hover mb-0 table-striped custom-table datatable" id="vocCSPSevtDataTable" style="width:100%">
                                        <thead>
                                            <tr>
                                                <th colspan="2"></th>
                                                <th>Total 년</th>
                                                @for (int i = 1; i <= 12; i++)
                                                {
                                                    @if (DateTime.Now.Month == i)
                                                    {
                                                        <th style="background-color: #FCF3CF;color:red">@string.Format("{0}월", i)</th>
                                                    }
                                                    else
                                                    {
                                                        <th>@string.Format("{0}월", i)</th>
                                                    }
                                                }
                                            </tr>
                                        </thead>

                                        <tbody id="tbl-content-LFemSevtDataTable">
                                            @foreach (var lfem in Model.vOCPPMs.Where(x => x.Module == "CSP").ToList())
                                            {
                                                @foreach (var _item in lfem.vOCPPM_Customers.Where(x => x.Customer == sub.Customer).ToList())
                                                {
                                                    @foreach (var type in _item.vocPPMModels.Select(x => x.Type).Distinct().OrderByDescending(x => x).ToList())
                                                    {
                                                        <tr>
                                                            @if (type == "Input")
                                                            {
                                                                <td rowspan="3">Wisol @lfem.Year.ToString().Substring(2, 2) 년 GMES</td>
                                                            }
                                                            <td>@type 수량</td>
                                                            <td>@_item.vocPPMModels.Where(x => x.Type == type).Sum(x => x.Value)</td>
                                                            @{
                                                                @foreach (var voc in _item.vocPPMModels)
                                                                {
                                                                    if (voc.Type == type)
                                                                    {
                                                                        <td>@voc.Value</td>
                                                                    }
                                                                }
                                                            }
                                                        </tr>
                                                    }

                                                    @for (int i = 1; i <= 2; i++)
                                                    {
                                                        <tr>
                                                            @if (i == 2)
                                                            {
                                                                <td>@lfem.Year.ToString().Substring(2, 2)년 target</td>
                                                            }

                                                            <td>
                                                                PPM
                                                            </td>
                                                            @foreach (var ppm in _item.pPMByMonths)
                                                            {
                                                                @if (i == 1)
                                                                {
                                                                    <td style="color:red">@ppm.PPM</td>
                                                                }
                                                                else
                                                                {
                                                                    <td style="color:deepskyblue">@ppm.Target</td>
                                                                }
                                                            }
                                                        </tr>
                                                    }
                                                }
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
        }
    </div>

    <div class="row area-lfem">
        @{
            int k = 0;
            @foreach (var item in Model.VocPPMView.dataChartsItem)
            {
                @foreach (var sub in item.Where(x => x.Module == "LFEM"))
                {
                    k = k + 1;
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-body">
                                <div>
                                    <canvas id="@string.Format("chartLine_lfem_{0}",k)" style="height:270px"></canvas>
                                </div>
                            </div>
                        </div>

                        <div class="card card-table">
                            <div class="card-header">
                                <h3 class="card-title mb-0">
                                    @sub.Customer Customer GMES Data
                                </h3>
                            </div>
                            <div class="card-body">
                                <div class="table-responsive">
                                    <table class="table table-bordered table-hover mb-0 table-striped custom-table datatable" id="voclfemSevtDataTable" style="width:100%">
                                        <thead>
                                            <tr>
                                                <th colspan="2"></th>
                                                <th>Total 년</th>
                                                @for (int i = 1; i <= 12; i++)
                                                {
                                                    @if (DateTime.Now.Month == i)
                                                    {
                                                        <th style="background-color: #FCF3CF;color:red">@string.Format("{0}월", i)</th>
                                                    }
                                                    else
                                                    {
                                                        <th>@string.Format("{0}월", i)</th>
                                                    }
                                                }
                                            </tr>
                                        </thead>

                                        <tbody id="tbl-content-LFemSevtDataTable">
                                            @foreach (var lfem in Model.vOCPPMs.Where(x => x.Module == "LFEM").ToList())
                                            {
                                                @foreach (var _item in lfem.vOCPPM_Customers.Where(x => x.Customer == sub.Customer).ToList())
                                                {
                                                    @foreach (var type in _item.vocPPMModels.Select(x => x.Type).Distinct().OrderByDescending(x => x).ToList())
                                                    {
                                                        <tr>
                                                            @if (type == "Input")
                                                            {
                                                                <td rowspan="3">Wisol @lfem.Year.ToString().Substring(2, 2) 년 GMES</td>
                                                            }
                                                            <td>@type 수량</td>
                                                            <td>@_item.vocPPMModels.Where(x => x.Type == type).Sum(x => x.Value)</td>
                                                            @{
                                                                @foreach (var voc in _item.vocPPMModels)
                                                                {
                                                                    if (voc.Type == type)
                                                                    {
                                                                        <td>@voc.Value</td>
                                                                    }
                                                                }
                                                            }
                                                        </tr>
                                                    }

                                                    @for (int i = 1; i <= 2; i++)
                                                    {
                                                        <tr>
                                                            @if (i == 2)
                                                            {
                                                                <td>@lfem.Year.ToString().Substring(2, 2)년 target</td>
                                                            }

                                                            <td>
                                                                PPM
                                                            </td>
                                                            @foreach (var ppm in _item.pPMByMonths)
                                                            {
                                                                @if (i == 1)
                                                                {
                                                                    <td style="color:red">@ppm.PPM</td>
                                                                }
                                                                else
                                                                {
                                                                    <td style="color:deepskyblue">@ppm.Target</td>
                                                                }
                                                            }
                                                        </tr>
                                                    }
                                                }
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
        }
    </div>
</div>
