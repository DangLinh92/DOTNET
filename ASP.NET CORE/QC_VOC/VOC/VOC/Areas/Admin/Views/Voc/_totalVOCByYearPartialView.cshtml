                <h5 id="vocYearTitle" class="card-title mb-0">@Model.totalVOCSitesView.Year.ToString().Substring(2)년 VOC 접수 건수</h5>
            </div>
            <div class="card-body">
                <div id="s-col-stacked"></div>
            </div>
        </div>
    </div>

    @foreach (var item in Model.vOCSiteModelByTimeLsts)
