                    <div id="vocByMonthTitle" class="card-title mb-0">@item.DivisionLst 진성 VOC 건수</div>
                </div>
                <div class="card-body">
                    <div class="chartjs-wrapper-demo">
                        <canvas id="chartstacked_ByYear" style="height:250px"></canvas>
                    </div>
                </div>
            </div>
        </div>
    }

