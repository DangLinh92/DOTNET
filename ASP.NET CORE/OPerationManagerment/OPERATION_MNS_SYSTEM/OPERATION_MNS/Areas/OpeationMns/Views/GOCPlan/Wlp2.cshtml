@model List<GocPlanViewModelEx>
@{
    ViewData["Title"] = "Actual & Prod. Plan";
    Layout = "~/Areas/OpeationMns/Views/Shared/_Layout.cshtml";
}

@section Scripts
{
    <script src="~/js/dataTables.fixedColumns.min.js"></script>
    <script src="~/js/dataTables.fixedHeader.min.js"></script>
    <script src="~/lib/jquery-ajax-unobtrusive/jquery.unobtrusive-ajax.min.js"></script>

    <script src="~/app/controllers/GocPlan/GocPlanWLP2Controller.js"></script>
    <script src="~/app/controllers/GocPlan/Wlp2_ActualPlan_Chart.js"></script>
    <script>
        var _actualPlan_Chart = new Wlp2_ActualPlan_Chart();

        var controller = new GocPlanWLP2Controller();
        controller.initialize();

        onSuccess = controller.doAftersearch;
        onBeginAjax = controller.beginSearch;

        $(document).ready(function () {
            var table = $('#gocPlanDataTable').DataTable({
                scrollY: 530,
                scrollX: true,
                scrollCollapse: true,
                paging: false,
                select: true,
                "searching": true,
                fixedColumns: {
                    left: 6
                },
                fixedHeader: true
            });

            $('#gocPlanDataTable tbody').on('click', 'tr', function () {
                if ($(this).hasClass('selected')) {
                    $(this).removeClass('selected');
                } else {
                    table.$('tr.selected').removeClass('selected');
                    $(this).addClass('selected');
                }
            });

            $('input[type=search]').addClass('floating').removeClass('form-control-sm').css('width', 300).attr('placeholder', 'Type to search');
            $('select[name="gocPlanDataTable_length"]').removeClass('form-control-sm');


            refreshChart();
        });

        $('#show-hidden-grid-wlp').click(function () {
            $("i", this).toggleClass("fa fa-caret-right fa fa-caret-down");
            $('.hidden-grid-wlp').slideToggle("slow");

        });

        $('#show-hidden-grid-chart-wlp').click(function () {
            $("i", this).toggleClass("fa fa-caret-right fa fa-caret-down");
            $('.hidden-grid-chart-wlp').slideToggle("slow");

        });

        refreshChart = function () {

            let _fromdate = $('#searchFromTime').val();
            let _todate = $('#searchToTime').val();
            let _danhMuc = $('#cboDanhMuc').val();

            if (_danhMuc == 'NHAP_KHO') {
                $('#wlp_Input').text('Wafer nhập kho wlp (후공정 자재 입고실적)');
            }
            else if (_danhMuc == 'SAN_XUAT') {
                $('#wlp_Input').text('WLP sản xuất (후공정 생산실적)');
            }
            else {
                $('#wlp_Input').text('WLP xuất smt (후공정 smt 출하실적)');
            }

            $.ajax({
                url: '/OpeationMns/GOCPlan/GetDataActualPlanChartWlp2',
                type: 'POST',
                data: {
                    fromDay: _fromdate,
                    toDay: _todate,
                    danhmuc: _danhMuc
                },
                success: function (data) {
                    _actualPlan_Chart.DrawChart(data);
                },
                error: function (status) {
                    hrms.notify(status.responseText, 'error', 'alert', function () { });
                }
            });
        }
    </script>
}

