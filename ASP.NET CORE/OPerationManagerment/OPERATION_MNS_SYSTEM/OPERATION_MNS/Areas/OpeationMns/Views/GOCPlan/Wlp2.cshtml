<div class="content container-fluid">
    <!-- Page Header -->
    <div class="page-header">
        <div class="row align-items-center">
            <div class="col">
                <h3 class="page-title">@ViewData["Title"]</h3>
                <ul class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/OpeationMns/Home/Index">Home</a></li>
                    <li class="breadcrumb-item active">Actual & Prod. Plan</li>
                </ul>
            </div>
        </div>
    </div>
    <!-- /Page Header -->

    <div class="row">
        <div class="col-sm-12" id="show-hidden-grid-wlp">
            <ul class="breadcrumb">
                <li class="breadcrumb-item active" style="cursor: pointer;">
                    <i class="fa fa-caret-right"></i> <strong>Actual & Prod. Plan</strong>
                </li>
            </ul>
        </div>
    </div>

    <div class="row hidden-grid-wlp">
        <div class="col-md-12">
            <form id="frmSearch" method="post" data-ajax="true" data-ajax-url="/OpeationMns/GOCPlan/Search" data-ajax-update="#gridGocPlan" data-ajax-mode='replace' data-ajax-begin="onBeginAjax" data-ajax-success="onSuccess" data-ajax-complete="refreshChart">
                <div class="row filter-row">
                    <div class="col-sm-6 col-md-3 col-lg-3 col-xl-2 col-12">
                        <input type="hidden" name="chipWafer" value="CHIP" />
                        <input type="hidden" name="wlp" value="WLP2" />
                        <input type="hidden" name="inputWlp2" value="" />
                    </div>
                    <div class="col-sm-6 col-md-3 col-lg-3 col-xl-2 col-12">
                        <div class="form-group form-focus select-focus">
                            <select class="select floating" id="cboView" name="actualPlanGap">
                                <option value="">ALL</option>
                                <option value="ACTUAL">ACTUAL</option>
                                <option value="PLAN">PLAN</option>
                                <option value="GAP">GAP</option>
                            </select>
                            <label class="focus-label">Actual/Plan/Gap</label>
                        </div>
                    </div>
                    <div class="col-sm-6 col-md-3 col-lg-3 col-xl-2 col-12">
                        <div class="form-group form-focus select-focus">
                            <select class="select floating" id="cboDanhMuc" name="danhmuc">
                                <option value="NHAP_KHO">Wafer nhập kho wlp (후공정 자재 입고실적)</option>
                                <option value="SAN_XUAT">WLP sản xuất (후공정 생산실적)</option>
                                <option value="XUAT_SMT">WLP xuất smt (후공정 smt 출하실적)</option>
                            </select>
                            <label class="focus-label">Category</label>
                        </div>
                    </div>
                    <div class="col-sm-6 col-md-3 col-lg-3 col-xl-2 col-12">
                        <div class="form-group form-focus">
                            <div class="cal-icon">
                                <input class="form-control floating datetimepicker" type="text" id="searchFromTime" name="fromTime">
                            </div>
                            <label class="focus-label">From</label>
                        </div>
                    </div>
                    <div class="col-sm-6 col-md-3 col-lg-3 col-xl-2 col-12">
                        <div class="form-group form-focus">
                            <div class="cal-icon">
                                <input class="form-control floating datetimepicker" type="text" id="searchToTime" name="toTime">
                            </div>
                            <label class="focus-label">To</label>
                        </div>
                    </div>
                    <div class="col-sm-6 col-md-3 col-lg-3 col-xl-2 col-12">
                        <button href="#" class="btn btn-success btn-block" id="btnSearch" type="submit"> Search </button>
                    </div>
                </div>
            </form>
            <div class="col-md-12 d-flex">
                <div class="card flex-fill dash-statistics">
                    <div class="card-header">
                        <h5 id="wlp_Input" class="card-title mb-0">Wafer In By Day</h5>
                    </div>
                    <div class="card-body">
                        <canvas id="chartstacked_wlp_Input" style="height:350px"></canvas>
                    </div>
                </div>
            </div>
            <div class="table-responsive" id="gridGocPlan">
                @await Html.PartialAsync("_GocPlanGridViewWlp2", Model)
            </div>
        </div>
    </div>
</div>



