    <div class="row">
        <div class="col-sm-12" id="show-hidden-grid-wlp-week">
            <ul class="breadcrumb">
                <li class="breadcrumb-item active" style="cursor: pointer;">
                    <i class="fa fa-caret-right"></i> <strong>개발 샘플 실적 현황  종합표</strong>
                </li>
            </ul>
        </div>
    </div>
    <div class="row hidden-grid-wlp-week">
        <div class="col-md-12 d-flex">
            <div class="card flex-fill dash-statistics">
                <div class="card-header">
                    <div id="vocByMonthTitle" class="card-title mb-0"></div>
                </div>
                <div class="card-body">
                    <div class="chartjs-wrapper-demo">
                        @*<canvas id="chart_rate_nguoichiuTN" style="height:250px"></canvas>*@
                        @(Html.DevExtreme().PieChart()
                            .ID("pie")
                            .Palette(VizPalette.SoftPastel)
                            .Type(PieChartType.Doughnut)
                            .Title("개발 샘플 실적 현황 종합표")
                            .Tooltip(t => t
                            .Enabled(true)
                            .CustomizeTooltip(@<text>
                                function(arg) {
                                    console.log(arg);
                                return {
                                text: arg.argumentText + ": " + arg.valueText + "(" + (arg.percent * 100).toFixed(2) + "%)"
                                };
                                }
                            </text>)
                            )
                            .Legend(l => l
                            .HorizontalAlignment(HorizontalAlignment.Right)
                            .VerticalAlignment(VerticalEdge.Top)
                            .Margin(0)
                            )
                            .Export(e => e.Enabled(true))
                            .Series(s => s
                            .Add()
                            .ArgumentField("Legend")
                            .ValueField("Value")
                            .Label(l => l
                            .Visible(true)
                            .Connector(c => c.Visible(true))
                            .CustomizeText("customizeLabel")
                            )
                            )
                            .DataSource(Model.SampleChiuTN)
                            )
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-12" id="show-hidden-grid-wlp1-week">
            <ul class="breadcrumb">
                <li class="breadcrumb-item active" style="cursor: pointer;">
                    <i class="fa fa-caret-right"></i> <strong>LEADTIME GAP 현황</strong>
                </li>
            </ul>
        </div>
    </div>
    <div class="row hidden-grid-wlp1-week">
        <div class="col-md-12 d-flex">
            <div class="card flex-fill dash-statistics">
                <div class="card-header">
                    <div class="card-title mb-0">리드 타임 차이 현황 ( 건수 단위 )</div>
                </div>
                <div class="card-body">
                    <div class="chartjs-wrapper-demo">
                        <canvas id="chart_leadtime_gap" style="height:250px"></canvas>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-12 d-flex">
            <div class="card flex-fill dash-statistics">
                <div class="card-body">
                    @(Html.DevExtreme().DataGrid<LeadtimeViewModel>()
                        .ID("grid-container_gap")
                        .DataSource(Model.SampleDetail)
                        .Height(250)
                        .ShowBorders(true)
                        .Scrolling(scrolling => scrolling.ColumnRenderingMode(GridColumnRenderingMode.Virtual))
                        .Paging(paging => paging.Enabled(false))
                        .AllowColumnResizing(true)
                        .ColumnMinWidth(50)
                        .ColumnAutoWidth(true)
                        .ShowColumnLines(true)
                        .ShowRowLines(true)
                        .RowAlternationEnabled(true)
                        .FilterRow(filterRow => filterRow
                        .Visible(true)
                        .ApplyFilter(GridApplyFilterMode.Auto)
                        )
                        .HeaderFilter(headerFilter => headerFilter.Visible(true))
                        .HoverStateEnabled(true)
                        .Selection(s => s.Mode(SelectionMode.Single))
                        .Columns(columns =>
                        {
                            columns.AddFor(m => m.Model).Caption("Model");
                            columns.AddFor(m => m.ModelRutGon).Caption("기종명(생략)");
                            columns.AddFor(m => m.LotNo).Caption("Lot No");
                            columns.AddFor(m => m.SoTam).Caption("매수");
                            columns.AddFor(m => m.NguoiChiuTrachNhiem).Caption("담당자");
                            columns.AddFor(m => m.PLCode).Caption("CODE 구분");
                            columns.AddFor(m => m.LeadTimePlan).Caption("의뢰 LEADTIME");
                            columns.AddFor(m => m.LeadTimeActual).Caption("실제 LEADTIME");
                            columns.AddFor(m => m.Gap).Caption("Gap");
                            columns.AddFor(m => m.LyDoDelay).Caption("지연 사유");
                        }).Summary(s => s.TotalItems(items =>
                        {
                            items.AddFor(m => m.Model).SummaryType(SummaryType.Count);
                            items.AddFor(m => m.SoTam).SummaryType(SummaryType.Sum);
                            items.AddFor(m => m.Gap).SummaryType(SummaryType.Sum);
                        })
                        ))
                </div>
            </div>
        </div>
    </div>
</div>



