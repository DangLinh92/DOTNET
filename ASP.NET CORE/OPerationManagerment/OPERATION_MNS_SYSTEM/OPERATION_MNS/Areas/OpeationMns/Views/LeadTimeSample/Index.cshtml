@section Scripts
    {
    <script>

        var Sample_LeadTimeByMonth = JSON.parse('@Html.Raw(JsonSerializer.Serialize(Model.Sample_LeadTimeByMonth))');
        var Sample_LeadTimeByWeek = JSON.parse('@Html.Raw(JsonSerializer.Serialize(Model.Sample_LeadTimeByWeek))');
        var Sample_WaferByMonth = JSON.parse('@Html.Raw(JsonSerializer.Serialize(Model.Sample_WaferByMonth))');
        var Sample_WaferByWeek = JSON.parse('@Html.Raw(JsonSerializer.Serialize(Model.Sample_WaferByWeek))');
        var SampleChiuTN = JSON.parse('@Html.Raw(JsonSerializer.Serialize(Model.SampleChiuTN))');
        var SampleGapLeadtime = JSON.parse('@Html.Raw(JsonSerializer.Serialize(Model.SampleGapLeadtime))');

        // var WeeksLabel = JSON.parse('@Html.Raw(JsonSerializer.Serialize(Model.Weeks))');
        var weekSelected = JSON.parse('@Html.Raw(JsonSerializer.Serialize(Model.Week))');
        var Gaps = JSON.parse('@Html.Raw(JsonSerializer.Serialize(Model.Gaps))');

        $('#txtYear').datetimepicker({
            format: 'YYYY',
            icons:
            {
                up: "fa fa-angle-up",
                down: "fa fa-angle-down",
                next: 'fa fa-angle-right',
                previous: 'fa fa-angle-left'
            }
        });

        $('#txtMonth').datetimepicker({
            format: 'MM',
            icons:
            {
                up: "fa fa-angle-up",
                down: "fa fa-angle-down",
                next: 'fa fa-angle-right',
                previous: 'fa fa-angle-left'
            }
        });

        $('#txtDay').datetimepicker({
            format: 'DD',
            icons:
            {
                up: "fa fa-angle-up",
                down: "fa fa-angle-down",
                next: 'fa fa-angle-right',
                previous: 'fa fa-angle-left'
            }
        });
    </script>
    <script src="~/app/controllers/leadtimesample/sampleleadtime_chart.js"></script>
    <script>
        var _leadTimeChart = new SampleLeadTimeChart();
        _leadTimeChart.DrawChart();

        $(function () {
            $('#txtMonth').on('dp.change', function (e) {

                $.ajax({
                    url: '/OpeationMns/LeadTimeSample/GetWeekByMonth',
                    type: 'POST',
                    data: {
                        year: $('#txtYear').val(),
                        month: $('#txtMonth').val(),
                    },
                    success: function (response) {
                        var _selected_0 = weekSelected == "0" ? "selected" : "";
                        var render = "<option value='0' " + _selected_0 + " >All</option>";
                        $.each(response, function (i, item) {
                            var _selected_1 = weekSelected == item ? "selected" : "";
                            render += "<option value='" + item + " ' " + _selected_1 + ">" + item + "</option >";
                        });
                        $('#cboWeek').html(render);
                    },
                    error: function (status) {
                        hrms.notify(status.responseText, 'error', 'alert', function () { });
                    }
                });
            });

            $('#show-hidden-grid-wlp').click(function () {
                $("i", this).toggleClass("fa fa-caret-right fa fa-caret-down");
                $('.hidden-grid-wlp').slideToggle("slow");

            });

            $('#show-hidden-grid-wlp-month').click(function () {
                $("i", this).toggleClass("fa fa-caret-right fa fa-caret-down");
                $('.hidden-grid-wlp-month').slideToggle("slow");

            });

            $('#show-hidden-grid-wlp-week').click(function () {
                $("i", this).toggleClass("fa fa-caret-right fa fa-caret-down");
                $('.hidden-grid-wlp-week').slideToggle("slow");

            });

            $('#show-hidden-grid-wlp1-week').click(function () {
                $("i", this).toggleClass("fa fa-caret-right fa fa-caret-down");
                $('.hidden-grid-wlp1-week').slideToggle("slow");

            });

            $('#show-hidden-grid-wlp2-week').click(function () {
                $("i", this).toggleClass("fa fa-caret-right fa fa-caret-down");
                $('.hidden-grid-wlp2-week').slideToggle("slow");

            });

            $('#show-hidden-grid-wlp1-day').click(function () {
                $("i", this).toggleClass("fa fa-caret-right fa fa-caret-down");
                $('.hidden-grid-wlp1-day').slideToggle("slow");

            });
            $('#show-hidden-grid-wlp2-day').click(function () {
                $("i", this).toggleClass("fa fa-caret-right fa fa-caret-down");
                $('.hidden-grid-wlp2-day').slideToggle("slow");

            });
        })

        function customizeLabel(e) {
            return e.argumentText + "\n" + e.valueText + "(" + (e.percent * 100).toFixed(2) + "%)";
        }
    </script>
}

<div class="content container-fluid">
    <!-- Page Header -->
    <div class="page-header">
        <div class="row align-items-center">
            <div class="col">
                <h3 class="page-title">@ViewData["Title"]</h3>
                <ul class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/OpeationMns/Home/Index">Home</a></li>
                    <li class="breadcrumb-item active">Sample Lead Time Trend</li>
                </ul>
            </div>
        </div>
    </div>

    <div id="myHeader">
        <form action="/OpeationMns/LeadTimeSample/Search" method="post">
            <div class="row filter-row">
                <div class="col-md-6 col-sm-6 col-lg-6 col-xl-2">
                    <div class="form-group form-focus select-focus">
                        <div class="cal-icon"><input id="txtYear" name="year" value="@Model.Year" class="form-control datetimepicker" type="text" required></div>
                        <label class="focus-label">Year</label>
                    </div>
                </div>
                <div class="col-md-6 col-sm-6 col-lg-6 col-xl-2">
                    <div class="form-group form-focus select-focus">
                        <div class="cal-icon"><input id="txtMonth" name="month" value="@Model.Month" class="form-control datetimepicker" type="text"></div>
                        <label class="focus-label">Month</label>
                    </div>
                </div>
                <div class="col-md-6 col-sm-6 col-lg-6 col-xl-2">
                    <div class="form-group form-focus select-focus">
                        <select id="cboWeek" class="select floating" name="week">
                            <!option value="0" @(Model.Week == 0 ? "selected" : "")>All</!option>
                            @foreach (var w in Model.Weeks)
                            {
                                <!option value="@w" @(Model.Week + "" == w ? "selected" : "")>W @w</!option>
                            }
                        </select>
                        <label class="focus-label">Week</label>
                    </div>
                </div>
                <div class="col-md-6 col-sm-6 col-lg-6 col-xl-2">
                    <div class="form-group form-focus select-focus">
                        <select id="cboCode" class="select floating" name="code">
                            <!option value="" @(Model.Code == "" ? "selected" : "")>All</!option>
                            @foreach (var w in Model.Codes)
                            {
                                <!option value="@w" @(Model.Code + "" == w ? "selected" : "")>@w</!option>
                            }
                        </select>
                        <label class="focus-label">Code</label>
                    </div>
                </div>
                <div class="col-md-6 col-sm-6 col-lg-6 col-xl-2">
                    <div class="form-group form-focus select-focus">
                        <select id="cboNguoiphutrach" class="select floating" name="nguoiphutrach">
                            <!option value="" @(Model.NguoiPhuTrach == "" ? "selected" : "")>All</!option>
                            @foreach (var w in Model.NguoiPhuTrachs)
                            {
                                <!option value="@w" @(Model.NguoiPhuTrach + "" == w ? "selected" : "")>@w</!option>
                            }
                        </select>
                        <label class="focus-label">구분</label>
                    </div>
                </div>
                <div class="col-md-6 col-sm-6 col-lg-6 col-xl-1">
                    <div class="form-group form-focus select-focus">
                        <select id="cboGap" class="select floating" name="gap">
                            <!option value="-9999" @(Model.Gap == -9999 ? "selected" : "")>All</!option>
                            @foreach (var w in Model.Gaps)
                            {
                                <!option value="@w" @(Model.Gap == w ? "selected" : "")>@w</!option>
                            }
                        </select>
                        <label class="focus-label">GAP</label>
                    </div>
                </div>
                <div class="col-md-6 col-sm-6 col-lg-6 col-xl-1">
                    <button id="btnSearch" type="submit" class="btn btn-success btn-block"> Search </button>
                </div>
            </div>
        </form>
    </div>

    <div class="row">
        <div class="stats-box mb-4" style="margin-left:12px !important">
